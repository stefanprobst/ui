{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["@acdh-oeaw/tsconfig"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"./types/**/*.d.ts",
		"./**/*.ts",
		"./**/*.tsx",
		"./.storybook/**/*.ts",
		"./.storybook/**/*.tsx"
	],
	"exclude": ["dist", "node_modules", "storybook-static"],
	"mdx": {
		"checkMdx": false,
		"plugins": []
	}
}
